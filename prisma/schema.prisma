generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(uuid())
  email         String    
  nome          String
  empresa       String
  segmento      String
  telefone      String
  faturamento   Float
  created_at    DateTime    @default(now())
  respostas     Answer[]    @relation("UserAnswers")

  @@map("usuarios")
}

model Answer {
  id              Int       @id @default(autoincrement())
  pergunta_id     Int      
  resposta        String
  usuario_id      String
  created_at      DateTime  @default(now())
  user            User      @relation("UserAnswers", fields: [usuario_id], references: [id])

  @@map("respostas")
}